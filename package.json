{
  "name": "chefcam.",
  "version": "0.0.1",
  "description": "Find recipes from just a photo of the ingredients with AI.",
  "author": "mst-mkt, imoken777, rarandeyo, sorainiad",
  "scripts": {
    "dev": "turbo dev",
    "dev:frontend": "pnpm -F frontend run dev",
    "dev:backend": "pnpm -F backend run dev",
    "check": "turbo check",
    "fix": "turbo fix",
    "typecheck": "turbo typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@mst-mkt/js-config": "npm:@jsr/mst-mkt__js-config@^0.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "turbo": "^2.5.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,css}": [
      "biome check --write"
    ]
  },
  "volta": {
    "node": "22.14.0"
  },
  "packageManager": "pnpm@10.9.0"
}
